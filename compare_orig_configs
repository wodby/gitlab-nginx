#!/usr/bin/env bash

set -e

if [[ -n "${DEBUG}" ]]; then
    set -x
fi

gitlab_ver=$1

url="https://gitlab.com/gitlab-org/gitlab-ce/raw/v${gitlab_ver}"

array=(
    "./orig/gitlab::${url}/lib/support/nginx/gitlab"
    "./orig/gitlab-pages::${url}/lib/support/nginx/gitlab-pages"
)

outdated=0

for index in "${array[@]}" ; do
    local="${index%%::*}"
    url="${index##*::}"

    orig="/tmp/${RANDOM}"
    wget -qO "${orig}" "${url}"

    echo "Checking ${local}"

    if diff --strip-trailing-cr "${local}" "${orig}"; then
        echo "OK"
    else
        echo "!!! OUTDATED"
        echo "${url}"
        outdated=1
    fi

    rm -f "${orig}"
done

[[ "${outdated}" == 0 ]] || exit 1